{
  "name": "tourist",
  "version": "1.0.0",
  "description": "Tourist is an API for artificially visiting vulnerable web applications in CTF challenges",
  "main": "src/index.ts",
  "repository": "https://github.com/CTFd/tourist",
  "author": "Mi≈Çosz Skaza <milosz.skaza@ctfd.io>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rm -rf ./build && tsc -p tsconfig.json",
    "start": "yarn build && node build/index.js",
    "start:app": "nodemon ./src/index.ts",
    "start:test-app": "nodemon ./tests/utils/_server.ts",
    "format": "prettier 'src/**/*.ts' --write",
    "lint": "prettier 'src/**/*.ts'",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:cov": "c8 ava"
  },
  "dependencies": {
    "@fastify/swagger": "^8.1.0",
    "@fastify/type-provider-typebox": "^2.3.0",
    "@sinclair/typebox": "^0.25.5",
    "fastify": "^4.9.2",
    "playwright": "^1.27.1",
    "vm2": "^3.9.11"
  },
  "devDependencies": {
    "@fastify/formbody": "^7.3.0",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "ava": "^5.0.1",
    "c8": "^7.12.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 88,
    "arrowParens": "avoid"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ]
  }
}
