{
  "name": "tourist",
  "version": "0.1.1",
  "description": "Tourist is an API for artificially visiting vulnerable web applications in CTF challenges",
  "main": "src/index.ts",
  "repository": "https://github.com/CTFd/tourist",
  "author": "Mi≈Çosz Skaza <milosz.skaza@ctfd.io>",
  "license": "Apache-2.0",
  "scripts": {
    "cmd:get-issuer-token": "ts-node ./src/cli.ts get-issuer-token",
    "build": "rm -rf ./out && tsc -p tsconfig.json",
    "start:serve": "node ./src/index.js",
    "start:build": "yarn build && node out/index.js",
    "start:app": "nodemon ./src/index.ts | pino-pretty",
    "start:test-app": "nodemon ./tests/utils/_server.ts",
    "format": "prettier '{src,tests}/**/*.ts' --write",
    "lint": "prettier --check '{src,tests}/**/*.ts'",
    "test": "ava",
    "test:ci": "ava --serial",
    "test:watch": "ava --watch",
    "test:cov": "c8 ava --serial"
  },
  "dependencies": {
    "@fastify/swagger": "^8.2.1",
    "@fastify/swagger-ui": "^1.3.0",
    "@fastify/type-provider-typebox": "^2.4.0",
    "@immobiliarelabs/fastify-sentry": "^5.0.1",
    "@sinclair/typebox": "^0.25.21",
    "bull": "^4.10.2",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "playwright": "^1.29.1",
    "vm2": "^3.9.13"
  },
  "devDependencies": {
    "@fastify/formbody": "^7.4.0",
    "@types/bull": "^4.10.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.0",
    "ava": "^5.1.0",
    "c8": "^7.12.0",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0"
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 88
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ],
    "ignoredByWatcher": [
      "static/openapi.json"
    ]
  }
}
