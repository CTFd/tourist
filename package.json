{
  "name": "tourist",
  "version": "0.1.0",
  "description": "Tourist is an API for artificially visiting vulnerable web applications in CTF challenges",
  "main": "src/index.ts",
  "repository": "https://github.com/CTFd/tourist",
  "author": "Mi≈Çosz Skaza <milosz.skaza@ctfd.io>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rm -rf ./out && tsc -p tsconfig.json",
    "start:serve": "node index.js",
    "start:build": "yarn build && node out/index.js",
    "start:app": "nodemon --ignore static/openapi.json ./src/index.ts",
    "start:test-app": "nodemon --ignore /static/openapi.json ./tests/utils/_server.ts",
    "format": "prettier '{src,tests}/**/*.ts' --write",
    "lint": "prettier --check '{src,tests}/**/*.ts'",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:cov": "c8 ava"
  },
  "dependencies": {
    "@fastify/static": "^6.5.0",
    "@fastify/swagger": "^8.1.0",
    "@fastify/swagger-ui": "^1.2.0",
    "@fastify/type-provider-typebox": "^2.3.0",
    "@sinclair/typebox": "^0.25.8",
    "fastify": "^4.10.0",
    "playwright": "^1.28.0",
    "vm2": "^3.9.11"
  },
  "devDependencies": {
    "@fastify/formbody": "^7.3.0",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "ava": "^5.1.0",
    "c8": "^7.12.0",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "uuid": "^9.0.0"
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 88,
    "arrowParens": "avoid"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ],
    "ignoredByWatcher": [
      "static/openapi.json"
    ]
  }
}
