{
  "name": "tourist",
  "version": "1.0.0",
  "description": "Tourist is an API for artificially visiting vulnerable web applications in CTF challenges",
  "main": "src/index.ts",
  "repository": "https://github.com/CTFd/tourist",
  "author": "Mi≈Çosz Skaza <milosz.skaza@ctfd.io>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rm -rf ./build && tsc -p tsconfig.json",
    "start": "yarn build && node build/index.js",
    "start:dev": "nodemon ./src/index.ts",
    "format": "prettier 'src/**/*.ts' --write",
    "lint": "prettier 'src/**/*.ts'",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "dependencies": {
    "fastify": "^4.9.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "ava": "^5.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 88,
    "arrowParens": "avoid"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ]
  }
}
